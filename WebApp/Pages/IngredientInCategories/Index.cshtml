@page
@model WebApp.Pages.IngredientInCategories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Add">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IngredientInCategory[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IngredientInCategory[0].Ingredient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.IngredientInCategory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category!.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient!.IngredientName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
